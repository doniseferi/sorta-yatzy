{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es2017",
    "module": "commonjs",
    "declaration": false,
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "noUnusedLocals": true,
    "types": [
      "node",
      "mocha",
      "reflect-metadata"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}